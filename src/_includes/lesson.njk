---
layout: base
metaTitle: Lektion
hideMainMenu: true
---
<a href="#">Tilbage</a>

<h1>{{onPageTitle}}</h1>

<ul class="nav nav-underline">
    <li class="nav-item"><a href="#student" class="nav-link active">Til kursisten</a>
    <li class="nav-item"><a href="#teacher" class="nav-link">Til læreren</a>
</ul>

<div id="student">
    <div class="">
    {{content | safe}}
    </div>

    <div class="callout">
        <h3 class="callout-title">Brug det du har lært</h3>
        <div class="callout-body">
            <ul class="list-checkbox">
            {% for homework in collections.homework %}
                {% if homework.data.partOfLesson == lessonNo %}
                <li>
                    <input type="checkbox" id="homework-{{lessonNo}}-{{loop.index}}">
                    <div class="list-item-body">
                        {{homework.data.onPageTitle}}
                        {%if homework.data.linkText %}
                            <a href="{{homework.url | url}}">{{homework.data.linkText}}</a>
                        {%endif%}
                    </div>
                </li>
                {% endif %}
            {% endfor %}
            </ul>
        </div>
    </div>

    <div class="callout callout-warning">
        <h3 class="callout-title">Guldkorn</h3>
        <div class="callout-body">
            <ul>
            {% for gem in collections.gems %}
                {% if gem.data.partOfLesson == lessonNo %}
                    <li>
                        {% if gem.data.externalLink %}<a href="{{gem.data.externalLink}}" target="_blank">{{gem.data.onPageTitle}}</a>{%else%}
                        <a href="{{gem.url | url}}">{{gem.data.onPageTitle}}</a>{%endif%}
                    </li>
                {% endif %}
            {% endfor %}
            </ul>
        </div>
    </div>

    <details>
        <summary>Til selvstudie</summary>
        {% for studynote in collections.studynotes %}
            {% if studynote.data.partOfLesson == lessonNo %}
                {{studynote.content | safe}}
            {% endif %}
        {% endfor %}
    </details>

    <form>
        <div class="form-group">
            <label class="form-label" for="completedDate">Lektion gennemført</label>
            <input class="form-control" type="date" id="completedDate">
            <input type="hidden" id="lesson" value="{{lessonNo}}">
        </div>
    </form>
</div>

<div id="teacher" hidden>
    {% for teachernote in collections.teachernotes %}
        {% if teachernote.data.partOfLesson == lessonNo %}
            {{teachernote.content | safe}}
        {% endif %}
    {% endfor %}
</div>

<hr>

<div>
    <a href="#">Forrige</a>
    <a href="#">Næste</a>
</div>