---
layout: base
metaTitle: Lektion
hideMainMenu: true
---
<a href="../" class="btn btn-light">Tilbage</a>

<h1 class="my-4">{{onPageTitle}}</h1>

<ul class="nav nav-underline border-bottom mb-4" role="tablist">
    <li class="nav-item" role="presentation"><button class="nav-link active">Til kursisten</button></li>
    <li class="nav-item" role="presentation"><button class="nav-link">Til læreren</button></li>
</ul>

<div class="tab-content">
    <div class="tab-pane fade show active" role="tabpanel" tabindex="0" id="student-tab-pane">
        <div class="mb-4">{{content | safe}}</div>

        <div class="card mb-4">
            <h5 class="card-header">Brug det du har lært</h5>
            <ul class="list-group list-group-flush">
            {% for homework in collections.homework %}
                {% if homework.data.partOfLesson == lessonNo %}
                <li class="list-group-item d-flex">
                    <input type="checkbox" class="form-check-input me-2" id="homework-{{lessonNo}}-{{loop.index}}">
                    <div class="d-inline-block">
                        <label for="homework-{{lessonNo}}-{{loop.index}}">{{homework.data.onPageTitle}}</label>
                        {%if homework.data.linkText %}
                            <p class="mb-0 mt-2"><a class="btn btn-outline-primary" href="{{homework.url | url}}">{{homework.data.linkText}}</a></p>
                        {%endif%}
                    </div>
                </li>
                {% endif %}
            {% endfor %}
            </ul>
        </div>

        <div class="card mb-4" style="background-color: var(--bs-warning-bg-subtle);">
            <h5 class="card-header">Guldkorn</h5>
            <div class="list-group list-group-flush">
            {% for gem in collections.gems %}
                {% if gem.data.partOfLesson == lessonNo %}
                    {% if gem.data.externalLink %}<a href="{{gem.data.externalLink}}" class="list-group-item list-group-item-action" target="_blank">{{gem.data.onPageTitle}} (eksternt link)</a>{%else%}
                        <a href="{{gem.url | url}}" class="list-group-item list-group-item-action">{{gem.data.onPageTitle}}</a>{%endif%}
                {% endif %}
            {% endfor %}
            </div>
        </div>

        <details class="card mb-4">
            <summary class="card-header">Til selvstudie</summary>
            <div class="card-body">
            {% for studynote in collections.studynotes %}
                {% if studynote.data.partOfLesson == lessonNo %}
                    {{studynote.content | safe}}
                {% endif %}
            {% endfor %}
            </div>
        </details>

        <form>
            <div class="form-group">
                <label class="form-label" for="completedDate">Lektion gennemført</label>
                <input class="form-control" type="date" id="completedDate">
                <input type="hidden" id="lesson" value="{{lessonNo}}">
            </div>
        </form>
    </div>

    <div class="tab-pane fade" role="tabpanel" tabindex="0" id="teacher-tab-pane">
        {% for teachernote in collections.teachernotes %}
            {% if teachernote.data.partOfLesson == lessonNo %}
                {{teachernote.content | safe}}
            {% endif %}
        {% endfor %}
    </div>
</div>

<div class="d-flex justify-content-between border-top border-bottom my-4 py-4">
    <a href="#" class="btn btn-primary">Forrige</a>
    <a href="#" class="btn btn-primary">Næste</a>
</div>