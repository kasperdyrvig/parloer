---
layout: standard
---
{{content | safe}}

{% if showModulesList %}
<h2 class="mt-lg mb-sm">Moduler</h2>
<div class="list-group nav-list-group">
{%- for module in collections.module %}
<a class="list-group-item" href="{{module.url | url}}">{{module.data.metaTitle}}</a>
{%- endfor %}
</div>
{% endif %}

{% if moduleNo > 0 %}
<h2 class="mt-lg mb-sm">Lektioner</h2>
<div class="list-group nav-list-group">
{%- for lesson in collections[getLessonsOf] %}
<a class="list-group-item" href="{{lesson.url | url}}">{{lesson.data.metaTitle}}</a>
{%- endfor %}
</div>

<p><a class="btn btn-small btn-white btn-inline" href="parloer">Støttesætninger</a></p>
{% endif %}