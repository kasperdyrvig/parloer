<div class="dropdown dropdown-right">
    <button class="btn dropdown-trigger" title="Indstillinger" type="button" aria-expanded="false">Indstillinger</button>
    <div class="dropdown-container" hidden>
        <form>
            <label for="playbackrate">Talehastighed</label>
            <input type="range" list="samplerates" min="0.5" max="1.5" step=".25" value="1" id="playbackrate" onchange="setPlaybackRate(this)">
