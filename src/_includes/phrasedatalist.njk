---
layout: standard
---
<p><a href="../" class="btn btn-small btn-white btn-inline">Tilbage</a></p>

<h1 class="mt-lg mb-sm">{{metaTitle}}</h1>

<div class="phrase-list">
{% for phrase in phrases[getCollection] %}
    <div class="phrase-item" id="{{getCollection}}-{{loop.index}}">
        {% if phrase.emoji %}
            <div class="phrase-emoji">{{phrase.emoji}}</div>
        {% elif phrase.image %}
            {% set imageUrl %}/assets/images/{{getCollection}}/{{phrase.image}}{%endset%}
            <div class="phrase-image"><img src="{{imageUrl | url}}" loading="lazy"></div>
        {% endif %}
        <div class="phrase-body">
            {% if phrase.danish %}
                <p class="m-0 text-secondary-emphasis phrase-danish">{{phrase.danish}}</p>
            {% endif %}
            {% if phrase.content %}
                <small class="m-0 phrase-note">{{phrase.content | safe}}</small>
            {% endif %}
            {% if phrase.greenlandic %}
                <p class=" m-0 text-primary-emphasis phrase-greenlandic" lang="kl">{{phrase.greenlandic}}</p>
            {% endif %}
        </div>
        <div class="phrase-tools mt-sm">
            {% if phrase.audio %}
                <button type="button" data-playing="false" class="play-button button-ghost" title="Sig højt">Sig højt</button>
            {% endif %}
            {% if phrase.greenlandic %}
                <button type="button" class="copy-button button-ghost" title="Kopier tekst">Kopier</button>
            {% endif %}
            <button type="button" class="favorite-button button-ghost" title="Føj til eller fjern fra samling">Favorit</button>
        </div>
        {% if phrase.audio %}
            {% set audioUrl %}/assets/audio/{{getCollection}}/{{phrase.audio}}{%endset%}
            <audio src="{{audioUrl | url}}" preload="metadata"></audio>
        {% endif %}
    </div>
{% endfor %}
</div>