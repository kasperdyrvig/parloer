    </div>
    <div class="gamepanel-footer">
        <button class="btn btn-block btn-uppercase btn-blue" type="button" onclick="startExercise()">Start</button>
    </div>
</section>

<section class="gamepanel gamearea hidden" id="exercise">
    <div class="gamepanel-body">
        {{content | safe}}
    </div>
            
    <!--Next button here-->
